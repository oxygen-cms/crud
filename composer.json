{
    "name": "oxygen/crud",
    "description": "Create, Read, Update and Delete Scaffolding for Oxygen",
    "license": "MIT",
    "keywords": [
        "cms",
        "framework",
        "OxygenExtension"
    ],
    "authors": [
        {
            "name": "Chris Chamberlain",
            "email": "chris@chamberlain.id.au"
        }
    ],
    "require": {
        "php": ">=7.2.0",
        "oxygen/core": "~0.9.1",
        "oxygen/data": "~0.9.7",
        "illuminate/support": "~6.0"
    },
    "autoload": {
        "psr-4": {
            "Oxygen\\Crud\\": "src/"
        }
    },
    "minimum-stability": "stable",
    "extra": {
        "title": "Oxygen CRUD",
        "readme": "oxygen.md",
        "changes": "changes.md",
        "icon": "icon.png",
        "providers": [
            {
                "name": "CRUD",
                "class": "Oxygen\\Crud\\CrudServiceProvider",
                "description": "Exposes CRUD Resources"
            }
        ]
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.18",
        "phpspec/phpspec": "^6.1"
    },
    "scripts": {
        "test": "vendor/bin/phpspec run && vendor/bin/phpstan analyze src --level 1"
    }
}
